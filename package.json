{
  "name": "jupyterlab-heroku",
  "version": "0.1.0",
  "description": "JupyterLab extension to manage and deploy applications to Heroku",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "homepage": "https://github.com/jtpio/jupyterlab-heroku",
  "bugs": {
    "url": "https://github.com/jtpio/jupyterlab-heroku/issues"
  },
  "license": "BSD-3-Clause",
  "author": "Jeremy Tuloup",
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "style/**/*.{css,eot,gif,html,jpg,json,png,svg,woff2,ttf}"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "style": "style/index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtpio/jupyterlab-heroku.git"
  },
  "scripts": {
    "build": "tsc",
    "prettier": "prettier --write '**/*{.ts,.tsx,.js,.jsx,.css,.json,.md}'",
    "clean": "rimraf lib && rimraf tsconfig.tsbuildinfo",
    "prepare": "npm run clean && npm run build",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.15.1",
    "@jupyterlab/application": "^1.0.0",
    "@jupyterlab/coreutils": "^3.0.0",
    "@jupyterlab/filebrowser": "^1.0.0",
    "@jupyterlab/ui-components": "^1.0.0",
    "react": "~16.8.4",
    "react-dom": "~16.8.4"
  },
  "devDependencies": {
    "@types/react": "~16.8.13",
    "@types/react-dom": "~16.0.5",
    "husky": "^3.0.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~3.5.2"
  },
  "lint-staged": {
    "**/*{.ts,.tsx,.css,.json,.md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "sideEffects": [
    "style/*.css"
  ],
  "jupyterlab": {
    "extension": true
  }
}
